<div class='twip post prepend-1 span-13 last'>
      <h1 class='title post-title span-13 last'><%= link_to @twip.title, :controller => 'twips', :action=>'show', :id => @twip.id %></h1>
      <h2 class='authorship span-13 last'><span class='reactions'>0 reactions</span><span class='date'><%= date( @twip.created_at ) %> at </span><%= time( @twip.created_at ) %> <%= link_to 'edit', {:controller => 'twips', :action => 'edit', :id => @twip.id} if @twip.author.identity_url == authenticated_identity_url %> posted by <span class='author'><%= @twip.author.nickname %></span></h2>
   <div class='body span-13 last'><%= yield %></div>
</div>