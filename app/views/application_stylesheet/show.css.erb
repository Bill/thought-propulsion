/* -------------------------------------------------------------- 
grid overrides and style */

body {
	background-color: <%= @c_b %>;
   margin:0;
}
.no-alerts {
	background: <%= @c_b %> url(/images/header.png) repeat-x top left;
	color:#999;
}
.alerts {
	background:<%= @c_t_w3 %>;
	border-bottom: solid <%= @c_t_k2%> 2px;
}
.no-alerts, .alerts, .foot {
	margin:0;
	width:100%;
	min-width:830px;
}

.content {
	min-height: 100%;
	height: auto !important;
	height: 100%;
   margin: 0 0 20px 0;
	}
	
.head {
	background: url(/images/header_icon.png) no-repeat top left;
	color:<%= @c_b %>;
	height:90px;
	}
	
.foot { 
	background-color:#f7550c;
	color:<%= @c_b %>;
	height:20px;
	border-top:1px solid #000000;
	position:fixed;
	bottom:0;
	left:0;
	}

/* -------------------------------------------------------------- 
copy style */

.content {margin-top:2em;}
.content p {padding:0 0 0 10px;}
.content h1 {
	margin:36px 0 6px 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_chevron.png) top left no-repeat;
	}

.content p {padding:0 0 0 10px;}

a {text-decoration: none; color:#FFB500;}
a:hover, a:focus {text-decoration: none; color:#f7550c;}

.head a:link, .foot a:link, .head a:visited, .foot a:visited, .head a:active, .foot a:active {text-decoration: underline; color:<%= @c_b %>;}
.head a:hover, .head a:focus, .foot a:hover. .head a:focus {text-decoration: none; color:#23201F;}

h1, h2, h3, h4, h5, h6 {color:#FFFFFF;}
h3 a {text-decoration: none; color:#fff;}
h2 {margin-bottom: -.1em;}
h3 {margin-bottom: .1em;}

img { float:left; margin:0; }


/* -------------------------------------------------------------- 
login style */

#openid_url {
	background: url(/images/login-bg.gif) no-repeat #FFF 5px;
	padding-left: 25px;
	color:#000000;
	border: 1px solid#777777;
	font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:10px;
	width:100px;
	margin:0px;
	}
	
.button {
	font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:10px;
	background-color:#FFFFFF;
	color:#23201F;
	border:1px solid #777777;
	}
	
/* -------------------------------------------------------------- 
vcard Contact style */

.vcard h1 {
	height:36px;
	margin:36px 0 13px 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_email.png) left;
	}
	
.adr {
	display: block;
	}
	
/*
There's nowhere to put this word in the markup without polluting the pertinent
hcard structure, so we'll stick it into the presentation.
*/
.tel .type:after {
	content: ' phone: ';
}

/* -------------------------------------------------------------- 
forms */
.form-table p {
   padding: 0;
   margin: 0;
}
.form-table th {
   background:none;
   text-align:right;
   vertical-align:top;
}
.form-table th, .form-table td {
   border-bottom: 1px dotted <%=@c_b_w1%>;
}
.form-table tr.last th, .form-table tr.last td {
   border-bottom: none;
}
/* .fieldWithErrors is applied automatically by the Rails framework when a field has errors.
	see also: Blueprint CSS screen.css rules for .error and friends (I made this rule match that one)
*/
.fieldWithErrors input {border:2px solid #ddd; background:#FBE3E4;color:#8a1f11;border-color:#FBC2C4;}
/* Rails puts this class on the field--let's style it like blueprint .error*/
.fieldWithErrors label {background:#FBE3E4;color:#8a1f11;border-color:#FBC2C4;}

.instructions { color:<%=@c_b_w1%>}

.alert {
   border:none;
   margin:0;
   color: <%= @c_t_k4%>;
   font-size: 150%;
   padding: 0.5em 0.5em 0.5em 25px;
}

.error {
   background: url(/images/stop.png) no-repeat 0 center;
   }