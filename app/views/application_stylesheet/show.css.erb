


/* -------------------------------------------------------------- 
top-level elements */

body {
	background-color: <%= @c_b %>;
	margin:0;
	}
	
.no-alerts {
	background: <%= @c_b %> url(/images/header.png) repeat-x top left;
	color:<%= @c_b_w4%>
	}
	
.alerts {
	background:<%= @c_t_k1%>;
	border-bottom: solid <%= @c_t_k5%> 2px;
	}
	
.no-alerts, .alerts, .foot {
	margin:0;
	width:100%;
	min-width:830px;
	}

.content {
	min-height: 100%;
	height: auto !important;
	height: 100%;
	margin: 0 0 20px 0;
	}
	
.head {
	background: url(/images/header_icon.png) no-repeat top left;
	color:<%= @c_b %>;
	height:90px;
	position:relative;
	}

.foot { 
	background-color:<%= @c_a %>;
	color:<%= @c_b %>;
	height:20px;
	border-top:1px solid <%= @c_a_k5%>;
	position:fixed;
	bottom:0;
	left:0;
	}



/* -------------------------------------------------------------- 
navigation elements */

.navigation {
	font-weight:bold;
	word-spacing:15px;
	left:10px;
	bottom:4px;
	position:absolute;
	}

.login {
	color:<%= @c_a_w4%>;
	left:220px;
	bottom:4px;
	position:absolute;
	}

ul#nav {
	position:absolute;
	margin:0;
	left:0;
	bottom:0;
	width:411px;
	height:27px;
	/*overflow: hidden;*/
	background:transparent url(/images/navigation.gif) no-repeat 0 0;
	}
ul#nav li {
	padding:0;
	margin:0;
	display:block;
	float:left;
	text-indent:-9999px;	
	}
ul#nav li a {
	border:0;
	display:block;
	text-decoration:none;
	overflow:hidden;
	background:transparent url(/images/navigation.gif) no-repeat;
	}
li#home a {
	margin-left:31px;
	width:57px;
	height:27px;
	 }
li#why a {
	width:49px;
	height:27px;
	 }
li#contact a {
	width:69px;
	height:27px;
	 }

li#home a:link, li#home a:visited {
	background-position:-31px 0px;
	 }	 	 	 
li#home a:hover, li#home a:focus {
	background-position:-31px -27px;
	 }
li#why a:link, li#why a:visited {	
	background-position:-88px 0px;
	}
li#why a:hover, li#why a:focus {	
	background-position:-88px -27px;
	}
li#contact a:link, li#contact a:visited {	
	background-position: -137px 0px;
	}
li#contact a:hover, li#contact a:focus {	
	background-position: -137px -27px;
	}

body#home-page ul#nav li#home a {
	background-position:-31px -54px;
	}
body#why-page ul#nav li#why a {
	background-position:-88px -54px;
	}
body#contact-page ul#nav li#contact a {
	background-position:-137px -54px;
	}



/* -------------------------------------------------------------- 
alerts */

/*have to reset some properties set on error in screen.css*/
.alerts .error, .alerts .warn, .alerts .inform {
	margin:0;
	padding:0 0 0 40px; /* make room on left for image */
	border:none;
	}

.alerts .alert {
	border:none;
	color: <%= @c_t_w4%>;
	font-size:1.2em; /*these three properties are from screen.css large rule*/
	line-height:2.5em;
	margin-bottom:1.25em;
	}

.alerts .error {
	background: url(/images/error.png) no-repeat 0 center;
	}

.alerts .warn {
	background: url(/images/warn.png) no-repeat 0 center;
	}

.alerts .inform {
	background: url(/images/inform.png) no-repeat 0 center;
	}



/* -------------------------------------------------------------- 
copy style */

.content {margin-top:2em;}
.content p {padding:0 0 0 10px;}
.content h1 {
	min-height:36px;
	margin:1em 0 0.5em 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_chevron.png) top left;
	}

.content p {padding:0 0 0 10px;}

.new_user h1 {
	min-height:36px;
	margin:1em 0 0.5em 0;
	padding:0 13px 0 36px;
	background: url(/images/banner.png) top left;
	}

.trademark {
	vertical-align: baseline;
	font-size: 0.6em;
	position: relative;
	top: -0.4em;
   color: <%=  @c_b_w1%>
	}
	
.no-alerts .trademark {
   color: <%=  @c_b_w3%>
}

a {text-decoration: none; border-bottom: 1px dotted <%= @c_a_k1%>; color:<%= @c_a_w1%>;}
a:hover, a:focus {text-decoration: none; border-bottom: 1px solid <%= @c_a_w1%>; color:<%= @c_a_w1%>; background-color: <%= @c_b_k1%>;}
.navigation a {text-decoration: none; border-bottom: none; color:<%= @c_a_w5%>;}

h1, h2, h3, h4, h5, h6 {color:<%= @c_a_w5%>;}
h1 { font-size: 2em; line-height: 1.4; margin-bottom: -.1em; }
img { float:left; margin:0; }



/* -------------------------------------------------------------- 
login style */

div, form {
	display:inline;
	}

#openid_url {
	background: url(/images/login-bg.gif) no-repeat <%= @c_a_w5%> 5px;
	padding-left: 25px;
	color:<%= @c_a_k5%>;
	border: 1px solid <%= @c_b_w2%>;
	font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:10px;
	width:100px;
	margin:0px;
	}
	
.button {
	font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:10px;
	background-color:<%= @c_a_w5%>;
	color:#23201F;
	border:1px solid <%= @c_b_w2%>;
	}
	
	
	
/* -------------------------------------------------------------- 
vcard Contact style */

.vcard h1 {
	min-height:36px;
	margin:36px 0 13px 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_email.png) top left;
	}

.vcard h1 a {text-decoration: none; color:<%= @c_a_w5%>; border-bottom: none; background-color: transparent;
	}
	
.adr {
	display: block;
	}
	
/*
There's nowhere to put this word in the markup without polluting the pertinent
hcard structure, so we'll stick it into the presentation.
*/
.tel .type:after {
	content: ' phone: ';
	}



/* -------------------------------------------------------------- 
forms */
.form-table p {
   padding: 0;
   margin: 0;
	}
.form-table th {
   background:none;
   text-align:right;
   vertical-align:top;
	}
.form-table th, .form-table td {
   border-bottom: 1px dotted <%=@c_b_w1%>;
	}
.form-table tr.last th, .form-table tr.last td {
   border-bottom: none;
}
/* .fieldWithErrors is applied automatically by the Rails framework when a field has errors.
	see also: Blueprint CSS screen.css rules for .error and friends (I made this rule match that one)
*/
.fieldWithErrors input {border:2px solid <%=@c_t_w2%>; background:<%=@c_t_w3%>;}

.content .error { 
   color: <%=@c_t%>;
   background:none; /* these two properties undo blueprint style*/
   border:none;
   }

.instructions { color:<%=@c_b_w1%>}