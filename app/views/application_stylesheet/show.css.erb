/* -------------------------------------------------------------- 
top-level elements */

html, body {
   height:100%;
   background-color:<%= @c_b %>;
   margin:0;
}

.page {position:relative; min-height:100%;margin:0;}

.head {
   background: url(/images/header_icon.png) no-repeat top left;
   color:<%= @c_b %>;
   height:90px;
   position:relative;
}

.no-alerts {
   background:<%= @c_b %> url(/images/header.png) repeat-x top left;
   color:<%= @c_b_w4%>;
}

.alerts {
   background:<%= @c_t_k1%>;
   border-bottom: solid <%= @c_t_k5%> 2px;
}

.no-alerts, .alerts, .foot, .bottom {
   margin:0;
   width:100%;
   min-width:830px;
}

.content  {
   padding-bottom:5em;
}

.foot { 
   color:<%= @c_a %>;
   position:absolute;
   bottom:0;
}



/* -------------------------------------------------------------- 
navigation elements */

.navigation {
   font-weight:bold;
   word-spacing:15px;
   left:10px;
   bottom:4px;
   position:absolute;
}

div.login {
   color:<%= @c_a_w4%>;
   bottom:4px;
   left:260px;
   position:absolute;
}

ul.nav {
   position:absolute;
   margin:0;
   left:0;
   bottom:0;
   width:450px;
   height:26px;
   /*overflow: hidden;*/
   background:transparent url(/images/navigation_bg.png) no-repeat 0 0;
}
ul.nav li {
   padding:0;
   margin:0;
   display:block;
   float:left;
   text-indent:-9999px;	
}
ul.nav li a {
   border:0;
   display:block;
   text-decoration:none;
   overflow:hidden;
   background:transparent url(/images/navigation.png) no-repeat;
}
li.home a {
   width:56px;
   height:26px;
}
li.why a {
   width:49px;
   height:26px;
}
li.contact a {
   width:68px;
   height:26px;
}

li.home a:link, li.home a:visited {
   background-position:-71px 0px;
}	 	 	 
li.home a:hover, li.home a:focus {
   background-position:-71px -26px;
}
li.why a:link, li.why a:visited {	
   background-position:-127px 0px;
}
li.why a:hover, li.why a:focus {	
   background-position:-127px -26px;
}
li.contact a:link, li.contact a:visited {	
   background-position: -176px 0px;
}
li.contact a:hover, li.contact a:focus {	
   background-position: -176px -26px;
}

body.home ul.nav li.home a {
   background-position:-71px -52px;
}
body.why ul.nav li.why a {
   background-position:-127px -52px;
}
body.contact ul.nav li.contact a {
   background-position:-176px -52px;
}



/* -------------------------------------------------------------- 
alerts */

/*have to reset some properties set on error in screen.css*/
.alerts .error, .alerts .warn, .alerts .inform {
   margin:0;
   padding:0 0 0 40px; /* make room on left for image */
   border:none;
}

.alerts .alert {
   border:none;
   color:<%= @c_t_w4%>;
   font-size:1.2em; /*these three properties are from screen.css large rule*/
   line-height:1.3em;
   margin: 1.25em 0;
}

.alerts .error {
   background:url(/images/error.png) no-repeat 0 center;
}

.alerts .warn {
   background:url(/images/warn.png) no-repeat 0 center;
}

.alerts .inform {
   background:url(/images/inform.png) no-repeat 0 center;
}


