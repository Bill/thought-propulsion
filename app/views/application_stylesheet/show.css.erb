/* -------------------------------------------------------------- 
top-level elements */

html, body {
   height:100%;
   background-color:<%= @c_b %>;
   margin:0;
}

.page {position:relative; min-height:100%;margin:0;}

.head {
   background: url(/images/header_icon.png) no-repeat top left;
   color:<%= @c_b %>;
   height:90px;
   position:relative;
}

.no-alerts {
   background:<%= @c_b %> url(/images/header.png) repeat-x top left;
   color:<%= @c_b_w4%>;
}

.alerts {
   background:<%= @c_t_k1%>;
   border-bottom: solid <%= @c_t_k5%> 2px;
}

.no-alerts, .alerts{
   margin:0;
   width:100%;
   min-width:830px;
}

.content  {
   padding:2em 0 5em 0;
}

.foot { 
   color:<%= @c_a %>;
   position:absolute;
   bottom:0;
}



/* -------------------------------------------------------------- 
main content style */

.intro {margin-top:1.5em; margin-bottom:1.5em;padding-top:1.5em;}
.icon {}

.vcard {margin-top:1.5em; margin-bottom:1.5em;padding-top:1.5em;}

.bg {
   background: <%= @c_b_w1%> url(/images/content_copy.png) repeat-y left top;
   border-top: 2px solid <%= @c_a_k5%>;
   border-bottom: 2px solid <%= @c_a_k5%>;
   border-right: 2px solid <%= @c_a_k5%>;
   }

.extend-foot {
   position:absolute;
   bottom:0;
   left:0;
   height:20em;
   background:<%= @c_b_w1%>;
   text-align:left;
   }

.content a {text-decoration: none; outline:none; border-bottom: 1px dotted <%= @c_a_k1%>; color:<%= @c_a_w1%>;}
.content a:hover, .content a:focus {text-decoration: none; outline:none; border-bottom: 1px solid <%= @c_a_w1%>; color:<%= @c_a_w1%>; background-color: <%= @c_b_k1%>;}
.icon a, .icon a:hover, .icon a:focus {text-decoration: none; outline:none; border-bottom: none; color:<%= @c_a_w2%>; background-color:transparent;}



/* -------------------------------------------------------------- 
misc. copy style */

a {text-decoration: none; outline:none; border:none; color:<%= @c_a_w1%>;}
h1, h2, h3, h4, h5, h6 {color:<%= @c_a_w5%>;}
h1 { font-size: 2em; line-height: 1.5; margin-bottom:0; }
h2 { font-size: 1.4em; line-height: 1.5; margin-bottom:0; }
img {margin:0;}

.trademark {
   vertical-align:baseline;
   font-size:0.6em;
   position:relative;
   top:-0.4em;
   color:<%=  @c_b_w1%>;
   }

.foot .small {margin:0; padding-left:35px;}
.foot .trademark {color:<%=  @c_b_w1%>;}
.no-alerts .trademark {color:<%=  @c_b_w4%>;}

.navigation a {text-decoration: none; border-bottom: none; color:<%= @c_a_w5%>;}
.space {margin-top:1.5em; margin-bottom:1.5em;padding-top:1.5em; padding-bottom:1.5em;}



/* -------------------------------------------------------------- 
navigation elements */

ul.nav {position:absolute;margin:0;left:0;bottom:0;width:510px;height:26px;
/*overflow: hidden;*/background:transparent url(/images/navigation_bg.png) no-repeat 0 0;}
ul.nav li {padding:0;margin:0;display:block;float:left;text-indent:-9999px;}
ul.nav li a {border:0;display:block;text-decoration:none;overflow:hidden;background:transparent url(/images/navigation.png) no-repeat;}
li.home a {width:56px;height:26px;}
li.why a {width:49px;height:26px;}
li.contact a {width:78px;height:26px;}
li.home a:link, li.home a:visited {background-position:-71px 0px;}	 	 	 
li.home a:hover, li.home a:focus {background-position:-71px -26px;}
li.why a:link, li.why a:visited {background-position:-127px 0px;}
li.why a:hover, li.why a:focus {background-position:-127px -26px;}
li.contact a:link, li.contact a:visited {background-position: -176px 0px;}
li.contact a:hover, li.contact a:focus {background-position: -176px -26px;}
body.home ul.nav li.home a {background-position:-71px -52px;}
body.why ul.nav li.why a {background-position:-127px -52px;}
body.contact ul.nav li.contact a {background-position:-176px -52px;}



/* -------------------------------------------------------------- 
alerts */

/*have to reset some properties set on error in screen.css*/
.alerts .error, .alerts .warn, .alerts .inform {
   margin:0;
   padding:0 0 0 40px; /* make room on left for image */
   border:none;
}

.alerts .alert {
   border:none;
   color:<%= @c_t_w4%>;
   font-size:1.2em; /*these three properties are from screen.css large rule*/
   line-height:1.8em;
   margin: 1.25em 0;
   min-height:2em;
}

.alerts .error {
   background:url(/images/error.png) no-repeat 0 center;
}

.alerts .warn {
   background:url(/images/warn.png) no-repeat 0 center;
}

.alerts .inform {
   background:url(/images/inform.png) no-repeat 0 center;
}



/* -------------------------------------------------------------- 
login style */

.login {
   color:<%= @c_b_w4%>;
   margin-top:3px;
   }

.openid_url {
   background:url(/images/login-bg.gif) no-repeat 5px;
   padding-left:25px;
   width:100px;
   background-color:<%= @c_a_w5%>;
   color:<%= @c_a_k4%>;
}

.button {
   background-color:<%= @c_a_w5%>;
   color:#23201F;
   border:1px solid <%= @c_b_k2%>;
}



/* -------------------------------------------------------------- 
vcard Contact style */

.vcard h1 a, .vcard h1 a:hover, .vcard h1 a:focus {text-decoration: none; outline:none; border-bottom: none; color:<%= @c_a_w5%>; background-color:transparent;}
.adr {display:block;}

/*
There's nowhere to put this word in the markup without polluting the pertinent
hcard structure, so we'll stick it into the presentation.
*/
.tel .type:after {content: ' phone: ';}



/* -------------------------------------------------------------- 
forms */
.form-table p {
   padding:0;
   margin:0;
}
.form-table th {
   background:none;
   text-align:right;
   vertical-align:top;
}
.form-table th, .form-table td {
   border-bottom:1px dotted <%=@c_b_w1%>;
}
.form-table tr.last th, .form-table tr.last td {
   border-bottom:none;
}
/* .fieldWithErrors is applied automatically by the Rails framework when a field has errors.
see also: Blueprint CSS screen.css rules for .error and friends (I made this rule match that one)
*/
.fieldWithErrors input {border:2px solid <%=@c_t_w2%>; background:<%=@c_t_w3%>;}

.content .error { 
   color: <%=@c_t%>;
   background:none; /* these two properties undo blueprint style*/
   border:none;
}

.instructions { color:<%=@c_b_w4%>}



/* -------------------------------------------------------------- 
co-branding */

.tasty-technologies h1 {
   display:none;
}

.tasty-technologies ol {
   margin:0;
}
.tasty-technologies ol li {
   display:block;
   float:left;
}
.tasty-technologies ol a {
   border:0;
   display:block;
   text-decoration:none;
}
.tasty-technologies ol a {
   margin-left:31px;
   width:80px;
   height:80px;
}
.tasty-technologies ol a:hover {
   background:none;
}

.tasty-technologies img {
   width:80px;
}
.tasty-technologies img.amazon-web-services {
   width:127px; /*minimum width per AWS ToS: http://www.amazon.com/gp/browse.html?node=360388011 */
}