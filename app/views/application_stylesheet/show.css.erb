/* .fieldWithErrors is applied automatically by the Rails framework when a field has errors.
	see also: Blueprint CSS screen.css rules for .error and friends (I made this rule match that one)
*/
.fieldWithErrors input {border:2px solid #ddd; background:#FBE3E4;color:#8a1f11;border-color:#FBC2C4;}
/* Rails puts this class on the field--let's style it like blueprint .error*/
.fieldWithErrors label {background:#FBE3E4;color:#8a1f11;border-color:#FBC2C4;}

.instructions { color:<%=@c_b_w1%>}

/* -------------------------------------------------------------- 
grid overrides and style */

html, body {height: 100%;}
* html .container {height: 100%;}

body {
	background:<%= @c_b %> url(/images/header.png) repeat-x top left;
	color:#999;
	margin:0;
	}
	
.container {
	background: url(/images/header_icon.png) no-repeat top left;
	min-height: 100%;
	height: auto !important;
	height: 100%;
	margin: 0 0 -21px 0;
	}
	
.head {
	color:<%= @c_b %>;
	height:90px;
	}
	
.foot { 
	background:#f7550c;
	color:<%= @c_b %>;
	height:20px;
	width:100%;
	border-top:1px solid #000000;
	position:fixed;
	bottom:0;
	left:0;
	}
	
.push {
	height: 20px; /* .push must be the same height as .footer */
}

/* -------------------------------------------------------------- 
copy style */

.alert {
	background:<%= @c_b %>;
	border:1px solid #000000;
	color:#999;
	}

.content {margin-top:4em;}

.copy_cell {
	border:1px dash #333;
	margin:0 0 36px 0;
	}

.banner_chevron {
	height:36px;
	margin:0 0 13px 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_chevron.png) left;
	}
	
.banner_email {
	height:36px;
	margin:0 0 13px 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_email.png) left;
	}

.content p {padding:0 0 0 10px;}

a {text-decoration: none; color:#FFB500;}
a:hover, a:focus {text-decoration: none; color:#f7550c;}

.head a:link, .foot a:link, .head a:visited, .foot a:visited, .head a:active, .foot a:active {text-decoration: underline; color:<%= @c_b %>;}
.head a:hover, .head a:focus, .foot a:hover. .head a:focus {text-decoration: none; color:#23201F;}

h1, h2, h3, h4, h5, h6 {color:#FFFFFF;}
h3 a {text-decoration: none; color:#fff;}
h2 {margin-bottom: -.1em;}
h3 {margin-bottom: .1em;}

img { float:left; margin:0; }


/* -------------------------------------------------------------- 
login style */

#openid_url {
	background: url(/images/login-bg.gif) no-repeat #FFF 5px;
	padding-left: 25px;
	color:#000000;
	border: 1px solid#777777;
	font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;
