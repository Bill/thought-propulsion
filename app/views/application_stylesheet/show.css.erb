/* -------------------------------------------------------------- 
top-level elements */

body {
	background-color: <%= @c_b %>;
   margin:0;
}
.no-alerts {
	background: <%= @c_b %> url(/images/header.png) repeat-x top left;
	color:#999;
}
.alerts {
	background:<%= @c_t_k1%>;
	border-bottom: solid <%= @c_t_k5%> 2px;
}
.no-alerts, .alerts, .foot {
	margin:0;
	width:100%;
	min-width:830px;
}

.content {
	min-height: 100%;
	height: auto !important;
	height: 100%;
   margin: 0 0 20px 0;
	}
	
.head {
	background: url(/images/header_icon.png) no-repeat top left;
	color:<%= @c_b %>;
	height:90px;
	}
	
.foot { 
	background-color:#f7550c;
	color:<%= @c_b %>;
	height:20px;
	border-top:1px solid #000000;
	position:fixed;
	bottom:0;
	left:0;
	}

/* -------------------------------------------------------------- 
trademark */
.trademark {
   font-size: 0.6em;
   vertical-align: text-top;
}

/* -------------------------------------------------------------- 
alerts */

/*have to reset some properties set on error in screen.css*/
.alerts .error, .alerts .warn, .alerts .inform {
   margin:0;
   padding:0 0 0 40px; /* make room on left for image */
   border:none;
}

.alerts .alert {
   border:none;
   color: <%= @c_t_w4%>;
   font-size:1.2em; /*these three properties are from screen.css large rule*/
   line-height:2.5em;
   margin-bottom:1.25em;
}

.alerts .error {
   background: url(/images/stop.png) no-repeat 0 center;
   }

/* -------------------------------------------------------------- 
copy style */

.content {margin-top:2em;}
.content p {padding:0 0 0 10px;}
.content h1 {
	min-height:36px;
	margin:1em 0 0.5em 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_chevron.png) top left;
	}

.content p {padding:0 0 0 10px;}

a {text-decoration: none; color:#FFB500;}
a:hover, a:focus {text-decoration: none; color:#f7550c;}

.head a:link, .foot a:link, .head a:visited, .foot a:visited, .head a:active, .foot a:active {text-decoration: underline; color:<%= @c_b %>;}
.head a:hover, .head a:focus, .foot a:hover. .head a:focus {text-decoration: none; color:#23201F;}

h1, h2, h3, h4, h5, h6 {color:#FFFFFF;}
h1 { font-size: 2em; line-height: 1.4; margin-bottom: -.1em; }

img { float:left; margin:0; }


/* -------------------------------------------------------------- 
login style */

#openid_url {
	background: url(/images/login-bg.gif) no-repeat #FFF 5px;
	padding-left: 25px;
	color:#000000;
	border: 1px solid#777777;
	font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:10px;
	width:100px;
	margin:0px;
	}
	
.button {
	font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size:10px;
	background-color:#FFFFFF;
	color:#23201F;
	border:1px solid #777777;
	}
	
/* -------------------------------------------------------------- 
vcard Contact style */

.vcard h1 {
	min-height:36px;
	margin:36px 0 13px 0;
	padding:0 13px 0 36px;
	background: url(/images/banner_email.png) top left;
	}

.vcard h1 a {text-decoration: none; color:#fff;}
	}
	
.adr {
	display: block;
	}
	
/*
There's nowhere to put this word in the markup without polluting the pertinent
hcard structure, so we'll stick it into the presentation.
*/
.tel .type:after {
	content: ' phone: ';
}

/* -------------------------------------------------------------- 
forms */
.form-table p {
   padding: 0;
   margin: 0;
}
.form-table th {
   background:none;
   text-align:right;
   vertical-align:top;
}
.form-table th, .form-table td {
   border-bottom: 1px dotted <%=@c_b_w1%>;
}
.form-table tr.last th, .form-table tr.last td {
   border-bottom: none;
}
/* .fieldWithErrors is applied automatically by the Rails framework when a field has errors.
	see also: Blueprint CSS screen.css rules for .error and friends (I made this rule match that one)
*/
.fieldWithErrors input {border:2px solid <%=@c_t_w2%>; background:<%=@c_t_w3%>;}

.content .error { 
   color: <%=@c_t%>;
   background:none; /* these two properties undo blueprint style*/
   border:none;
   }

.instructions { color:<%=@c_b_w1%>}