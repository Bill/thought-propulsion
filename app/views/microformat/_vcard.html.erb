<div class="vcard">
   <h3 class="fn org url"><%= link_to vcard[:fn], vcard[:url]%></h3>
   <ul>
   <%= render :partial => 'microformat/address', :collection => vcard[:addresses]%>
   </ul>
   <p>
   <%= render :partial => 'microformat/email', :collection => vcard[:emails]%>
   </p>
   <p>
   <%= render :partial => 'microformat/telephone', :collection => vcard[:telephones]%>
   </p>
</div>
