<% airbudd_form_for( :user, @user, :url => url_for( :controller => 'users', :action => 'update', :id => @user.id), :html => { :method => 'put'} ) do |f| %>
<%= render :partial => f, :locals => {:readonly => false}%>
<% f.buttons do |b| %>
<%= b.button :save %>
<%= b.button :cancel, :url => url_for( :controller => 'users', :action => 'show', :id => f.object ) %>
<% end %>
<% end %>